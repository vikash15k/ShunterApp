@{
    ViewData["Title"] = "Home Page";
}
<app-root></app-root>
@section scripts{
    <environment include="Production">
        <script src="~/Dist/runtime-es2015.js" type="module" asp-append-version="true"></script>
        <script src="~/Dist/runtime-es5.js" nomodule defer asp-append-version="true"></script>
        <script src="~/Dist/polyfills-es5.js" nomodule defer asp-append-version="true"></script>
        <script src="~/Dist/polyfills-es2015.js" type="module" asp-append-version="true"></script>
        <script src="~/Dist/styles-es2015.js" type="module" asp-append-version="true"></script>
        <script src="~/Dist/styles-es5.js" nomodule defer asp-append-version="true"></script>
        <script src="~/Dist/vendor-es2015.js" type="module" asp-append-version="true"></script>
        <script src="~/Dist/vendor-es5.js" nomodule defer asp-append-version="true"></script>
        <script src="~/Dist/main-es2015.js" type="module" asp-append-version="true"></script>
        <script src="~/Dist/main-es5.js" nomodule defer asp-append-version="true"></script>
        <style>
            body {
                background-color: yellow;
            }
        </style>
    </environment>
    <environment include="Development">
        <script src="~/Dist/runtime.js" type="module" asp-append-version="true"></script>
        <script src="~/Dist/polyfills.js" type="module" asp-append-version="true"></script>
        <script src="~/Dist/styles.js" type="module" asp-append-version="true"></script>
       <script src="~/Dist/vendor.js" type="module" asp-append-version="true"></script>
        <script src="~/Dist/main.js" type="module" asp-append-version="true"></script>
        
        <style>
            @*body {
                background-color: green;
            }*@
        </style>
    </environment>

}